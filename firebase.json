{
  "hosting": {
    "site": "geneplore-main",
    "public": "site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites":
    [
      {
        "source": "/static/hosted/bot-img/bot-logo.jpg",
        "destination": "/static/hosted/bot-img/bot-logo.png"
      },
      {
        "source": "/terms",
        "destination": "/terms.html"
      },
      {
        "source": "/privacy",
        "destination": "/terms.html"
      },
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/models",
        "destination": "/models.html"
      },
      {
        "source": "/changelog",
        "destination": "/changelog.html"
      },
      {
        "source": "/features",
        "destination": "/features.html"
      }
    ],
    "redirects":
    [
      {
        "source": "/discord",
        "destination": "https://discord.com/invite/RsztF7QRp7",
        "type": 301
      },
      {
        "source": "/bot",
        "destination": "https://discord.com/oauth2/authorize?client_id=1089317211652509811",
        "type": 301
      },
      {
        "source": "/gift",
        "destination": "https://geneplo.re/gift",
        "type": 301
      }
      
    ]
  }

}
